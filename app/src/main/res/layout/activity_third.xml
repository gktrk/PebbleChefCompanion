<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="haha.test3.SecondActivity">

    <EditText android:text=" " android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chickenDirectionsText"
        android:layout_above="@+id/sendPebbleButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to Pebble"
        android:id="@+id/sendPebbleButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Vegan Black Bean Soup"
        android:id="@+id/soupText"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingredients\n1 tbsp olive oil\n1 large onion, chopped\n1 stalk celery, chopped\n2 carrots, chopped\n4 cloves garlic, chopped\n2 tbsp chilli powder\n1 tbsp ground cumin\n1 pinch black pepper\n4 cups vegetable broth\n4 cans black beans\n1 can whole kernal corn\n1 can crushed tomatoes"
        android:id="@+id/textView2"
        android:layout_below="@+id/soupText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
